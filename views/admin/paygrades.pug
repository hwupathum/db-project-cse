doctype html
html(lang='en')
    include ../admin_common/head.pug
    +head("Admin Portal")
    body
        header
            include ../admin_common/navbar.pug
            +navbar(user)
        .container
            br
            .row
                .col-sm-12.offset-md-2.col-md-8
                    if paygrades
                        h4.text-center Pay Grades
                        br
                        a.btn.btn-outline-success(href="/admin/paygrades/add") Add New Pay Grade
                        table.table.table-hover.table-bordered
                            thead
                                tr
                                    th Name
                                    th.text-center Action
                            tbody            
                                for paygrade in paygrades
                                    tr
                                        p(id=paygrade.paygrade_id)
                                            td.span #{paygrade.grade}
                                            |
                                            td.text-center
                                                a(href="/admin/paygrades/edit/" + paygrade.paygrade_id) Edit
    include ../admin_common/footer.pug
    +footer()
    script(src="/javascripts/admins.js")