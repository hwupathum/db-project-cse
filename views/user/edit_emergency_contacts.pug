doctype html
html(lang='en')
    include ../common/head.pug
    +head("User Portal")
    body
        header
            include ../common/navbar.pug
            +navbar(user)
            .container
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        br
                        .jumbotron
                            h2.text-center Edit Emergency Contacts
                            .row
                                .col-sm-12.col-md-12
                                    form(action="/employee/" + employer.employee_id + "/emergency_contacts/edit/"+id.id method='POST')
                                        div.formgroup.row
                                            .col-sm-4.col-md-4
                                                input(required='true',name='f_name', type='text', value=formData.f_name, placeholder='First Name *').form-control
                                            .col-sm-4.col-md-4
                                                input(required='true',name='l_name', type='text', value=formData.l_name, placeholder='Last Name *').form-control
                                            .col-sm-4.col-md-4
                                                input(required='true',name='relation', type='text', value=formData.relation, placeholder='Relation *').form-control
                                            .col-sm-6.col-md-6
                                                input(required='true', name='tel_no', type='text', value=formData.tel_no, placeholder='Telephone *').form-control
                                            .col-sm-4.col-md-4
                                                input(name='street', type='text', value=formData.street, placeholder='Street').form-control
                                            .col-sm-4.col-md-4
                                                input(name='city', type='text', value=formData.city, placeholder='City').form-control
                                            .col-sm-4.col-md-4
                                                input(name='state', type='text', value=formData.state, placeholder='State').form-control
                                            .col-sm-4.col-md-4
                                                label.small.mb-1.mt-3 Gender *
                                                select(required='true', name='gender', value=formData.gender).form-control
                                                    option(value="Male") Male
                                                    option(value="Female") Female
                                            .col-sm-12.col-md-12
                                                if (errors && errors.message)
                                                    p.small.text-danger #{errors.message}
                                                button.mt-3.btn.btn-success(type='submit') Save
    include ../common/footer.pug
    +footer()