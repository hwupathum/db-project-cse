doctype html
html(lang='en')
  include ../common/head.pug
  +head("Starter MVP")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row
          .col-sm-12.offset-md-2.col-md-8
            br
            .jumbotron
              h2.text-center Login
              .row
                .col-sm-12.col-md-12.col-xs-12
                  form(action='/login', method='POST')
                    div.formgroup
                      label.small.mb-1.mt-3 Email:
                      input(placeholder='Enter your email', required='true', name='email', type='email', value=formData.email).form-control
                      label.small.mb-1.mt-3 Password:
                      input(placeholder='Enter your current Password', required='true', name='password', type='password', value='').form-control
                      if (errors && errors.message)
                        p.small.text-danger #{errors.message}
                      button.mt-3.btn.btn-primary(type='submit') Log in
                      p.mt-2.mb-0
                        | Dont't have an account? #[a(href="/signup") Sign up here]
  include ../common/footer.pug
  +footer()