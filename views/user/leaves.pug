doctype html
html(lang='en')
    include ../common/head.pug
    +head("Leaves")
    body
        header
            include ../common/navbar.pug
            +navbar(user)
        br
        .row
            .col-sm-12.offset-md-2.col-md-8
                if rows
                    h4.text-center Leaves
                    br
                    a.btn.btn-outline-primary(href="/apply_leave") Apply Leave
                    br
                    br
                    table.table.table-hover.table-bordered
                        thead.table-primary
                            tr
                                th Leave Type
                                th Reason
                                th From Date
                                th To Date
                        tbody
                            for leave in rows
                                tr
                                    p(id=leave.id)
                                        td.span #{leave.type}
                                        td.span #{leave.reason}
                                        td.span #{leave.from_date}
                                        td.span #{leave.to_date}
                    table.table.table-hover.table-bordered
                        thead.table-primary
                            tr
                                th Leave Type
                                th Count
                                th Maximum
                        tbody
                            for leave in countRows
                                tr
                                    p(id=leave.employee_id)
                                        td.span #{leave.type}
                                        td.span #{leave.count}
                                        td.span #{leave.max}
    include ../common/footer.pug
    +footer()